<ul class="nav navbar-nav navbar-right">
    @if (User.Identity.IsAuthenticated)
    {
        <li>
            <a href="#">@User.Identity.Name <span class="glyphicon glyphicon-user" aria-hidden="true"></span></a>
        </li>
        <li>
            <a asp-action="SignOut" asp-controller="Account"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span></a>
        </li>
    }
    else
    {
        <li>
            <a asp-action="SignIn" asp-controller="Account"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span></a>
        </li>
    }
</ul>
<script>
    $(document).ready(function () {
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
    });
</script>